<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ediger.diarynutrition" >

    <uses-sdk tools:overrideLibrary="com.github.sundeepk.compactcalendarview"/>

    <application
        android:name=".objects.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.IntroActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activity.FoodActivity"
            android:label="@string/act_food"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity"/>
        </activity>

        <activity android:name=".activity.AddActivity"
            android:parentActivityName=".activity.FoodActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.FoodActivity"/>
        </activity>

    </application>
</manifest>
