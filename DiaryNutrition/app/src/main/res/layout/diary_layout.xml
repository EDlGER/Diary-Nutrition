<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentFrame"
    android:background="#F5F5F5">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2 июня 2015"
        android:id="@+id/datePicker"
        android:background="@drawable/search_edit"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/btnDateNext"
        android:layout_toRightOf="@+id/btnDatePrev"
        android:layout_marginTop="6dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDateNext"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_next"
        android:layout_alignBottom="@+id/datePicker" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDatePrev"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_back"
        android:layout_alignBottom="@+id/datePicker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:id="@+id/cardLayout"
        android:layout_below="@+id/datePicker">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="150dp"
            card_view:cardBackgroundColor="@color/colorAccent"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="20sp"
                android:maxLines="1"
                android:text="123456"
                android:textColor="#FFFFFF"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:id="@+id/cardDivider"
        android:layout_below="@+id/cardLayout" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation = "horizontal"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/background_floating_material_light"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/cardDivider"
        android:layout_alignParentEnd="false"
        android:gravity="right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/info_carbo"
            android:text="@string/record_carbo"
            android:textSize="12sp"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_prot"
            android:text="@string/record_prot"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_fat"
            android:text="@string/record_fat"
            android:textSize="12sp"
            android:layout_marginRight="33dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_cal"
            android:text="@string/record_cal"
            android:textSize="12sp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listRecords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:background="@drawable/list_view"
        android:longClickable="true"
        android:divider="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout"
        android:nestedScrollingEnabled="false" />

</RelativeLayout>