<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:weightSum="1"
    android:touchscreenBlocksFocus="false"
    android:background="#FFFFFF"
    android:id="@+id/Relative"
    android:longClickable="false">



    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:id="@+id/padding_view1"/>

    <!--android:background="?android:attr/listDivider"-->
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_left"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:30"
        android:id="@+id/txt_time"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="8dp"
        android:layout_centerInParent="true" />

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="?android:attr/listDivider"
        android:layout_toRightOf="@+id/txt_time"
        android:layout_marginLeft="2dp"
        android:layout_centerInParent="true" />

    <TextView style="?android:textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Овсяная каша"
        android:id="@+id/txt_food_name"
        android:maxLength="25"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/txt_time"
        android:layout_toLeftOf="@+id/txt_cal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="350"
        android:textColor="@color/colorPrimary"
        android:id="@+id/txt_cal"
        android:textSize="25sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp" />

    <TextView style="?android:textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.9"
        android:id="@+id/txt_fat"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_marginLeft="5dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="?android:attr/listDivider"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="115dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:id="@+id/view"
        android:layout_marginBottom="10dp" />

    <TextView style="?android:textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.9"
        android:id="@+id/txt_prot"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/view2"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view"
        android:gravity="center_horizontal"/>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="?android:attr/listDivider"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="170dp"
        android:layout_alignParentRight="true"
        android:id="@+id/view2"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true" />

    <TextView style="?android:textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.9"

        android:id="@+id/txt_carbo"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/view2"
        android:layout_toLeftOf="@+id/view2"
        android:layout_toStartOf="@+id/view2"
        android:layout_marginRight="5dp" />

    <TextView style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 гр"
        android:id="@+id/txt_serving"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/txt_cal"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/txt_time"
        android:layout_marginLeft="5dp" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:id="@+id/padding_view2"
        android:layout_alignParentRight="true" />

    <View
        android:id="@+id/list_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/listDivider"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_drawable"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp" />


</RelativeLayout>