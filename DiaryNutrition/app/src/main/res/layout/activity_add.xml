<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ediger.diarynutrition.Fragments.AddActivity"
    android:background="#FFFFFF">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl_txtSearch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/tittle_search"
        android:singleLine="true"
        android:editable="true"
        android:drawableLeft="@drawable/ic_search1"
        android:background="@drawable/search_edit"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listFood"
        android:layout_below="@+id/fl_txtSearch"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false"
        android:textFilterEnabled="true"
        android:layout_above="@+id/btnAddF"
        android:background="@drawable/search_edit"
        android:layout_marginTop="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddF"
        android:drawableRight="@drawable/ic_add_48dp"
        android:onClick="btnAddClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00FFFFFF"
        android:visibility="visible" />
</RelativeLayout>
