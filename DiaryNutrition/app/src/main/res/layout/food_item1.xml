<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="8dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:background="@drawable/food_item_background">


    <TextView style="?android:textAppearanceListItemSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Овсяная каша"
        android:id="@+id/txt_f_name"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/star_view"
        android:layout_toLeftOf="@+id/txt_f_cal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="350"
        android:textColor="@color/colorPrimary"
        android:id="@+id/txt_f_cal"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.9"
        android:id="@+id/txt_f_carbo"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_marginLeft="5dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="?android:attr/listDivider"
        android:layout_marginRight="99dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentRight="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.9"
        android:id="@+id/txt_f_fat"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/view2"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view"
        android:gravity="center_horizontal"/>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="?android:attr/listDivider"
        android:layout_marginRight="154dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentRight="true"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.9"
        android:id="@+id/txt_f_prot"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/view2"
        android:layout_toLeftOf="@+id/view2"
        android:layout_toStartOf="@+id/view2"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:id="@+id/star_view"
        android:src="@drawable/ic_star"
        android:layout_alignBottom="@+id/txt_f_cal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-5dp" />

</RelativeLayout>