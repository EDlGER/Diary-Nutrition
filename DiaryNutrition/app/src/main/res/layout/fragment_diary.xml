<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentFrame">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/header_layout"
        android:background="@color/colorPrimary"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/consume_layout"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:id="@+id/consCal"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="9999"
                android:gravity="center" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="42dp"
                android:layout_height="5dp"
                android:id="@+id/pb_cal"
                android:progress="50"
                android:max="100"
                android:layout_below="@+id/consCal"
                android:layout_alignRight="@+id/consCal"
                android:layout_alignEnd="@+id/consCal"
                android:progressBackgroundTint="#00695c" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:id="@+id/consFat"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/consCal"
                android:layout_toStartOf="@+id/consCal"
                android:layout_marginRight="23dp"
                android:layout_marginTop="10dp"
                android:text="999"
                android:gravity="center"
                android:singleLine="true" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:id="@+id/pb_fat"
                android:progress="50"
                android:max="100"
                android:layout_below="@+id/consFat"
                android:layout_alignRight="@+id/consFat"
                android:layout_alignEnd="@+id/consFat"
                android:progressBackgroundTint="#00695c" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:id="@+id/consProt"
                android:text="999"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/consCal"
                android:layout_toStartOf="@+id/consCal"
                android:layout_marginRight="72dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:singleLine="true" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:id="@+id/pb_prot"
                android:progress="50"
                android:max="100"
                android:layout_below="@+id/consProt"
                android:layout_alignRight="@+id/consProt"
                android:layout_alignEnd="@+id/consProt"
                android:progressBackgroundTint="#00695c" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:id="@+id/consCarbo"
                android:text="999"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/consCal"
                android:layout_toStartOf="@+id/consCal"
                android:layout_marginRight="120dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:gravity="center" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="32dp"
                android:layout_height="5dp"
                android:id="@+id/pb_carbo"
                android:progress="50"
                android:max="100"
                android:layout_below="@+id/consCarbo"
                android:layout_alignRight="@+id/consCarbo"
                android:layout_alignEnd="@+id/consCarbo"
                android:progressBackgroundTint="#00695c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Употреблено"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation = "horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/colorPrimary"
            android:id="@+id/linearLayout"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/info_carbo"
                android:text="@string/record_carbo"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginRight="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_prot"
                android:text="@string/record_prot"
                android:layout_gravity="right"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginRight="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_fat"
                android:text="@string/record_fat"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginRight="35dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_cal"
                android:text="@string/record_cal"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginRight="20dp" />

        </LinearLayout>

    </LinearLayout>

<!-- #26a69a -->



    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/listRecords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:background="@color/listview_background"
        android:longClickable="true"
        android:divider="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/header_layout" />

</RelativeLayout>